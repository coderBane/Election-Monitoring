@inherits LayoutComponentBase
@implements IDisposable

<PageTitle>Election2023.ServerApp</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>
        <div class="top-row" style="height: 3rem;">
            Election Results Updates as at:<b> @theTime WAT</b>
            , @DateTime.Now.ToLongDateString()
        </div>
        <section class="content" style="background-color: whitesmoke;">
            @Body
        </section>
    </main>
</div>

@code{
    private string theTime = "00:00";
    private Timer? timer;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        timer = new Timer(Tick, null, 0, 1000);
    }

    private void Tick(object? _)
    {
        theTime = DateTime.Now.ToShortTimeString();
        InvokeAsync(StateHasChanged);
    }
    
    public void Dispose() 
    {
        timer?.Dispose();
    }
}

